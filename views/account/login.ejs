<h1><%- title %></h1>
<div class="flash-message">
    <%- messages() %>
</div>
<div class="login-container">
    <form class="login-form" action="/account/login" method="post">
      <label for="email">Email Address</label>
      <input type="email" id="email" name="account_email" required>

      <label for="password">Password</label>
      <input type="password" id="password" name="account_password" required>

      <button type="submit">Login</button>
    </form>
    <p>Don't have an account? <a class="register-link" href="/account/register"> Register here</a></p>
</div>