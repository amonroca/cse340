<h1>
    <%= title %>
</h1>
<%- messages() %>
    <% if (errors) { %>
        <div id="messages">
            <ul class="error">
                <% errors.forEach(error=> { %>
                    <li>
                        <%= error.msg %>
                    </li>
                    <% }) %>
            </ul>
        </div>
        <% } %>
            <div class="register-container">
                <form class="register-form" id="deleteForm" action="/inv/delete-inventory" method="post">
                    <div class="delete-warning">Confirm Delete - The delete is permanent</div>

                    <label for="inv_make">Make</label>
                    <input type="text" id="inv_make" name="inv_make" required value="<%= locals.inv_make %>" readonly>

                    <label for="inv_model">Model</label>
                    <input type="text" id="inv_model" name="inv_model" required value="<%= locals.inv_model %>"
                        readonly>

                    <label for="inv_year">Year</label>
                    <input type="number" id="inv_year" name="inv_year" min="1900" max="2025" required
                        value="<%= locals.inv_year %>" readonly>

                    <label for="inv_price">Price</label>
                    <input type="number" id="inv_price" name="inv_price" min="0" step="1" required
                        value="<%= locals.inv_price %>" readonly>

                    <button type="submit">Delete Vehicle</button>
                    <input type="hidden" name="inv_id" <% if (locals.inv_id) { %> value="<%= locals.inv_id %>"
                        <% } %> >
                </form>
            </div>